<Window x:Name="Chat" x:Class="iMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Visibility="Visible" Loaded="Chat_Loaded" Closing="Chat_Closing">
    <Grid>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="23" Margin="10,279,0,0" TextWrapping="Wrap" Text="Type message here..." VerticalAlignment="Top" Width="406" ToolTip="Type message here" KeyDown="MessageBox_KeyDown"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="424,280,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
        <RichTextBox x:Name="ChatArea" HorizontalAlignment="Left" Height="264" Margin="10,10,0,0" VerticalAlignment="Top" Width="489" AllowDrop="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>

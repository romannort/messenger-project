<Window x:Class="iMessenger.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginForm" Height="300" Width="300" Topmost="True">
    <Grid>
        <TextBox x:Name="NickName" HorizontalAlignment="Left" Height="23" Margin="79,70,0,0" TextWrapping="Wrap" Text="Enter nickname" VerticalAlignment="Top" Width="120" UndoLimit="12" ToolTip="Enter your nickname here"/>
        <Button x:Name="LoginButton" Content="Start chatting" HorizontalAlignment="Left" Margin="79,98,0,0" VerticalAlignment="Top" Width="120" Click="LoginButton_Click"/>

    </Grid>
</Window>
